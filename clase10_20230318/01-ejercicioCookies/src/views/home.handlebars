<h1>Cookies</h1>

<form action="/set" method="post">
    <input type="text" placeholder="ingresa tu nombre" name="nombre">
    <input type="text" placeholder="ingresa tu email" name="email">
    <br><br>
    <input type="submit" value="Generar">
</form>

<div id="cookie"></div>

<br><br>
<button onclick="recuperar()">Ver</button>

<script>
    let divCookie=document.getElementById('cookie');

    const recuperar=async()=>{
        let resultado=await fetch('/get');
        resultado = await resultado.text();

        divCookie.innerHTML=resultado;

    }

</script>
